//- サイト共通レイアウトファイルを継承
extends _layout.pug

//- _layout.pugのvarsを再定義
block vars
	//- サイト全体の設定ファイルの読み込み
	include _config.pug
	//- ページ用変数を設定
	- 
		//- ページID
		var id = "top"
		//- ページ設定
		var page = {
			url : 'index.html',
			title : 'トップページ',
			description : 'トップページです',
			keywords : 'トップページ',
			image : image_path + '/ogp.jpg'
		}
		//- CSSファイル名
		var cssfile = 'top.css'
		//- JSファイル名
		var jsfile = 'top-dist.js'	

//- _layout.pugのcontentsを再定義
block contents
	main
		//- article:独立した記事
		article
			h1
			section
				h2
					section
						h3
		//- 記事一覧
		.articles-list
			article
			article
		
		//- aside:コンテンツに関連しつつ、切り離し可能なセクション
		aside
